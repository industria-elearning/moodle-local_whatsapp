<div class="local_whatsapp_popup local_whatsapp_position_{{position}}" id="local_whatsapp_popup" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="local_whatsapp_popup_header">
      {{#headertitle}}<h5 class="h6 text-white">{{headertitle}}</h5>{{/headertitle}}
        <button id="local_whatsapp_close_button" type="button" class="close text-white" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div>
      <p class="local_whatsapp_popup_message">{{popupmessage}}</p>
      <div class="local_whatsapp_input_message_container">
        <textarea id="local_whatsapp_input_message" placeholder="Type your message..." class="local_whatsapp_input_message"></textarea>
        <button id="local_whatsapp_button_send" style="padding:8px" class="btn local_whatsapp_button_send" type="button">
          {{#pix}}send,local_whatsapp, {{#str}} send, local_whatsapp {{/str}}{{/pix}}
        </button>
      </div>
    </div>
</div>